@model OrderDTO

<h3>Você está muito perto de completar seu pedido!</h3>
<form class="form-horizontal" asp-controller="Order" asp-action="Checkout" method="post" role="form">
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="Name">Nome</label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="Surname">Sobrenome</label>
            <input asp-for="Surname" class="form-control" />
            <span class="text-danger" asp-validation-for="Surname"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="Address">Endereço</label>
            <input asp-for="Address" class="form-control" />
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="Number">Número</label>
            <input asp-for="Number" type="number" class="form-control" />
            <span class="text-danger" asp-validation-for="Number"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label class="control-label" asp-for="State">Estado</label>
            <input asp-for="State" class="form-control" />
            <span class="text-danger" asp-validation-for="State"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="control-label" asp-for="City">Cidade</label>
            <input asp-for="City" class="form-control" />
            <span class="text-danger" asp-validation-for="City"></span>
        </div>
        <div class="form-group col-md-4">
            <label class="control-label" asp-for="ZipCode">CEP</label>
            <input asp-for="ZipCode" class="form-control" />
            <span class="text-danger" asp-validation-for="ZipCode"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="Email">E-mail</label>
            <input asp-for="Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label" asp-for="PhoneNumber">Celular</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="form-group col-md-2">
            <input class="btn btn-success" type="submit" value="Concluir Pedido" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-outline-info" asp-controller="Cart" asp-action="Index">Retornar</a>
        </div>
    </div>
</form>
