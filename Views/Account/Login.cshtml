@{

    @model LoginViewModel;
    ViewBag.Title = "Login";
}

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Entre com...</h5>
                        <div class="mb-3">
                            <button class="btn btn-primary mr-2"><i class="fab fa-facebook-f"></i> Facebook</button>
                            <button class="btn btn-danger"><i class="fab fa-google"></i> Google</button>
                        </div>
                        <div class="d-flex align-items-center">
                            <hr class="flex-grow-1">
                            <span class="mx-2">Ou</span>
                            <hr class="flex-grow-1">
                        </div>
                        <form style="text-align:left" method="post" role="form" asp-action="Login" asp-controller="Account">
                            <div asp-validation-summary="ModelOnly"></div>
                            
                            @*OBS: Atualizei o .NET para o 8, ver se funciona o ModelOnly, se não funcionar deixa do jeito feioso que tá mesmo*@

                            @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Email">E-mail</label>
                                <input asp-for="Email" placeholder="exemplo@gmail.com" type="email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Senha</label>
                                <input asp-for="Password" placeholder="***" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check mb-0">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">
                                            Lembre-se de mim
                                        </label>
                                    </div>
                                    <a style="text-align: right" href="@Url.Action("ForgotPassword", "Account")" class="d-block mt-2">Esqueceu a senha?</a>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                        <div class="mt-3">
                            <span>Não tem uma conta? <a href="@Url.Action("Register", "Account")">Registrar</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

