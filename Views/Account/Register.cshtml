@{

    @model RegisterViewModel;
    ViewBag.Title = "Registro";
}

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <form style="text-align:left" method="post" role="form" asp-action="Register" asp-controller="Account">
                            <div asp-validation-summary="ModelOnly"></div>

                            @*OBS: Atualizei o .NET para o 8, ver se funciona o ModelOnly, se não funcionar deixa do jeito feioso que tá mesmo*@

                            @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

                            <div class="form-group">
                                <label asp-for="Name">Nome Completo</label>
                                <input asp-for="Name" placeholder="Jorginho" type="text" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Email">E-mail</label>
                                <input asp-for="Email" placeholder="exemplo@gmail.com" type="email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Senha</label>
                                <input asp-for="Password" placeholder="***" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div>
                                    <span>Sua senha deve conter:</span>
                                    <ul>
                                        <li>No mínimo 6 caracteres.</li>
                                        <li>No mínimo 1 caractere alfanumérico.</li>
                                        <li>No mínimo 1 caractere minúsculo ('a'-'z').</li>
                                        <li>No mínimo 1 caractere maiúsculo ('A'-'Z').</li>
                                    </ul>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                        </form>
                        <div class="mt-3">
                            <span>Já tem uma conta? <a href="@Url.Action("Login", "Account")">Logar</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

